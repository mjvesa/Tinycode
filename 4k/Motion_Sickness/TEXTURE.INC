MakeTexture    MACRO

                mov es,Texture


                xor di,di
                xor ax,ax
                mov cx,32768
                rep stosw

                mov a,100

@@DrawBobzOuterLoop:

                call Random
                mov di,RandVal
                shl di,8
                call Random
                add di,RandVal

                mov bx,-32
@@DrawBobYLoop:
                mov cx,-32
@@DrawBobXLoop:
                mov ax,cx
                imul ax
                xchg bp,ax
                mov ax,bx
                imul ax
                add ax,bp
                shr ax,7
                neg ax
                add ax,8
                cmp ax,0
                jle @@DontAdd

                add es:[di],al
@@DontAdd:
                inc di
                inc cx
                cmp cx,32
                jl @@DrawBobXLoop

                add di,192
                inc bx
                cmp bx,32
                jl @@DrawBobYLoop

                dec a
                jnz @@DrawBobzOuterLoop
ENDM

