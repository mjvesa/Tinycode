Smooth          proc
                xor di,di
                xor ax,ax
@@SmoothLoop:
                mov al,es:[di-1]                
                add al,es:[di+1]
                adc ah,0
                add al,es:[di-256]
                adc ah,0
                add al,es:[di+256]
                adc ah,0
                shr ax,2
                mov es:[di],al
                inc di
                jnz @@SmoothLoop
                retn
Smooth          endp

